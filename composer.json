{
  "name": "mzh/hyperf-jwt",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "php",
    "hyperf"
  ],
  "authors": [
    {
      "name": "hyperf-jwt",
      "homepage": "https://github.com/great-zh/hyperf-jwt",
      "role": "Developer"
    }
  ],
  "description": "hyperf-jwt 优化版",
  "autoload": {
    "psr-4": {
      "Mzh\\JwtAuth\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTest\\": "tests"
    }
  },
  "require": {
    "php": ">=7.2",
    "ext-swoole": ">=4.4",
    "hyperf/config": "~1.1.0",
    "hyperf/utils": "~1.1.0",
    "hyperf/framework": "~1.1.0",
    "hyperf/di": "~1.1.0",
    "ext-json": "*",
    "ext-redis": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.14",
    "hyperf/testing": "1.0.*",
    "phpstan/phpstan": "^0.10.5",
    "swoft/swoole-ide-helper": "dev-master"
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "test": "co-phpunit -c phpunit.xml --colors=always",
    "analyze": "phpstan analyse --memory-limit 300M -l 0 ./src",
    "cs-fix": "php-cs-fixer fix $1"
  },
  "extra": {
    "hyperf": {
      "config": "Mzh\\JwtAuth\\ConfigProvider"
    }
  }
}
